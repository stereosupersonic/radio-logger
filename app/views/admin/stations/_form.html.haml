= form_for [:admin, @station_form], :html => { :class => "form-horizontal" } do |f|
  = render "layouts/errors", object: f.object
  .form-group
    = f.label :name, :class => "control-label"
    = f.text_field :name, :class => "text-field form-control", :required => true
  .form-group
    = f.label :url
    = f.text_field :url, :class => "text-field form-control", :required => true
  .form-group
    = f.label :scraper
    = f.select :scraper, ::Station::SCRAPERS, :class => "text-field form-control", :required => true
  .form-group
    = f.label :script
    = f.text_area :script, :class => "text-field form-control", :required => true
  = submit_button "Save"
  = submit_button "Preview", id: :preview, name: "preview"
